@model CellarInventoryWeb.Inventory

@{
    ViewData["Title"] = "Add New Beverage";
}

<h2>Add New Beverage</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Item</h4>
        <hr />
